---
import { TechIcon } from "@content/tech-icons"

const { items } = Astro.props as { items: TechIcon[]}
---

<div class="overflow-hidden flex items-center py-6 text-custom-gray bg-orange-200/20 dark:bg-purple-300/10">
  {
    [0, 1].map(() => (
      <div class="animate-infinite-slide font-extrabold text-3xl flex min-w-full justify-between shrink-0">
        {items.map((item) => (
          <div class="h-16 md:h-18 mx-12 md:mx-32">
            <a href={item.url}>
              <img alt={item.name} src={item.route} class={`h-full ${ item.invertColorsOnLightMode && "invert dark:invert-0" }`} />
            </a>
          </div>
        ))}
      </div>
    ))
  }
</div>
