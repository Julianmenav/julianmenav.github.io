---
import projectList from "../../content/specialProjectList.json";
import ProjectCard from "./ProjectCard/ProjectCard";
---

<section id="portfolio" class="min-h-screen container px-6 py-8 max-w-[430px] sm:max-w-[560px] lg:max-w-[900px] xl:max-w-[1300px] m-auto">
  <div id="projectList" class="flex flex-wrap gap-y-8 gap-x-6 mt-9 justify-center">
    {
      projectList.map((project, id) => {
        return <ProjectCard client:visible picture={project.picture} name={project.name} description={project.description} links={project.links} technologies={project.technologies} />;
      })
    }
  </div>
</section>
